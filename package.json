{
  "name": "staking-ui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter @staking-ui/web dev",
    "build": "bun run --filter @staking-ui/web build",
    "lint": "bun run --filter '*' lint",
    "preview": "bun run --filter @staking-ui/web preview",
    "web:dev": "cd packages/web && bun run dev",
    "web:build": "cd packages/web && bun run build",
    "indexer:dev": "cd packages/indexer && bun run dev",
    "indexer:create": "cd packages/indexer && bun run create-schema",
    "indexer:drop": "cd packages/indexer && bun run drop-schema",
    "indexer:reset": "cd packages/indexer && bun run reset-schema"
  }
}
